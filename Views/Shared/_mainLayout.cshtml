@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_mainLayout</title>
    <script src="@Url.Content("~/Script/jquery.js")"></script>
    <script src="@Url.Content("~/Script/bootstrap.min.js")"></script>
    <link rel="stylesheet" href="@Url.Content("~/Style/bootstrap.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Style/bootstrap-theme.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Style/style.css")" />

    

